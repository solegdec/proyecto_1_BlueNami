<!DOCTYPE html>
<html>
<%- include("./partials/head") %>

    <body>
        <%- include("./partials/headerAdmin") %>
        <div>
            <h2 class="h2admin">Administrador de Productos</h2>
        </div>
          <article class="">
            <a href="/product-add-form/create"><ion-icon name="add-circle-outline"></ion-icon>Agregar</a>
          </article>
            <div>
                
                <div class="tablaAdmin">
                    <table class="tablaAdmin">
                        <thead class="thead">
                            <th scope="col">&nbsp;</th>
                            <th scope="col">Id</th>
                            <th scope="col">Tabla</th>
                            <th scope="col">Ver</th>
                            <th scope="col">Editar</th>
                            <th scope="col">Borrar</th>
                                                  

                            <th scope="col">&nbsp;</th>
                        </thead>
                        <tbody>
                            <% tablas.forEach(function(tabla){ %>
                                <form  class="tm-edit-product-form" action="/product/<%= tabla.id %>/edit?:_method=PUT" method="POST" enctype="multipart/form-data">
                            <tr>
                                <th scope="row"> <input type="checkbox"> </th>

                                <td><%=tabla.id%></td>
                                <td><%=tabla.name%></td>
                                <td><a href="/product/detail/<%=tabla.id%>"><i class="fas fa-info-circle"></i></a></td>
                                <td><a href="/product/<%=tabla.id%>/edit"><i class="far fa-edit"></a></td>
                                <td><a href="/product/delete/<%=tabla.id%>"><i class="far fa-trash-alt"></i></a></td>
                            
                            </tr> 
                            </form>      
                            <% }) %>

                        </tbody>
                    </table>
                </div>
            </div>
            

            <div class="olasSole"><img src="/img/olasSole1000x50.png" width="100%" height="100%"></div>
            <%- include("./partials/footer") %>
    </body>

</html>