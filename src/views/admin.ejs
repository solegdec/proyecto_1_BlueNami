<!DOCTYPE html>
<html>
<%- include("./partials/head") %>

    <body>
        <%- include("./partials/header") %>

            <div>
                <h2 class="h2admin">STOCK</h2>
                <div class="tablaAdmin">
                    <table class="tablaAdmin">
                        <thead class="thead">
                            <th scope="col">&nbsp;</th>
                            <th scope="col">Id</th>
                            <th scope="col">Tabla</th>
                            <th scope="col">Ver</th>
                            <th scope="col">Editar</th>
                            <th scope="col">Borrar</th>
                                                    

                            <th scope="col">&nbsp;</th>
                        </thead>
                        <tbody>
                                <%= tablas.forEach(tabla=>{%>
                            <tr>
                                <th scope="row"> <input type="checkbox"> </th>

                                <td><%=tabla.id%></td>
                                <td><%=tabla.nombre%></td>
                                <td><a href="/product/detail/<%=tabla.id%>"></a></td>
                                <td><a href="/product/edit/<%=tabla.id%>"></a></td>
                                <td><a href="/product/delete/<%=tabla.id%>"></a></td>
                            
                            </tr>       
                            <%});%>

                        </tbody>
                    </table>
                </div>
            </div>
            <div class="botonesSelAdmin">
                <a href="/adminAdd"> <button class="selAdmin" type="submit">AGREGAR NUEVO</button><br></a>
                <a href="/adminMod"><button class="selAdmin" type="submit">MODIFICAR</button><br></a>
                <a href="/admin"><button class="selAdmin" type="reset">ELIMINAR</button> <br></a>

            </div>


            <div class="olasSole"><img src="/img/olasSole1000x50.png" width="100%" height="100%"></div>
            <%- include("./partials/footer") %>
    </body>

</html>