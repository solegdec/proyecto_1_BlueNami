<!DOCTYPE html>
<html>
<%- include("./partials/head") %>
    <body>
        <%- include("./partials/headerAdmin") %>
        <div class="h2admin">
            <h2>Administrador de Productos</h2>
        </div>
          
               <div class="tablaAdmin">
                    <table class="tablaAdmin">
                        <thead class="thead">
                            <th scope="col">&nbsp;</th>
                            <th scope="col">Id</th>
                            <th scope="col">Nombre</th>
                            <th scope="col">Modelo</th>
                            <th scope="col">Precio</th>
                            <th scope="col">Color</th>
                            <th scope="col">Unidades</th>
                            <th scope="col">Ver</th>
                            <th scope="col">Editar</th>
                            <th scope="col">&nbsp;</th>
                        </thead>
                        <tbody>
                            <% tablas.forEach(function(tabla){ %>
                        <form  class="tm-edit-product-form" action="" method="POST" >
                            <tr>
                            <th scope="row"> <input type="checkbox"> </th>
                            <td><%=tabla.id%></td>
                            <td><%=tabla.name%></td>
                            <td><%=tabla.modelo%></td>
                            <td><%=tabla.precio%></td>
                            <td><%=tabla.color%></td>
                            <td><%=tabla.unidades%></td>
                        </form> 
                            <td><a href="/product/<%=tabla.id%>"><i class="fas fa-info-circle"></a></td>
                            <td><a href="/admin/<%=tabla.id%>/edit"><i class="far fa-edit"></a></td>
                            </tr> 
                         <% }) %>       
         
                        </tbody>
                    </table>
                    <article class="h2admin1">
                        <a href="/product-add-form/create"><ion-icon name="add-circle-outline"></ion-icon>Agregar Productos</a>
                      </article>
                </div>
              <div class="olasSole"><img src="/img/olasSole1000x50.png" width="100%" height="100%"></div>
            <%- include("./partials/footer") %>
    </body>

</html>