<!DOCTYPE html>
<html>
<%- include("./partials/head") %>

    <body class="bodysole">
        <%- include("./partials/header") %>
            <div> <h1 class="micarritoSole">Mi Carrito: </h1> </div>
           
            <section class="contenedorSole">
                <div class="tabla1Sole">
                    <table class="tablaAdmin">
                        <thead class="thead">
                        <th scope="col">&nbsp;</th>
                        <th scope="col">Id</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Marca</th>
                        <th scope="col">Precio</th>
                        <th scope="col">Foto</th>
                        <th scope="col">Cantidad</th>
                        <th scope="col">Subtotal</th>
                        <th scope="col">Eliminar</th>
                        </thead>
                        <tbody>
                        <%items.forEach(item=>{ %>
                        <form  class="tm-edit-product-form" action="" method="POST" >
                        <tr>
                        <th scope="row"> <input type="checkbox"> </th>
                        <td><%=item.id%></td>
                        <td><%=item.producto.nombre%></td>
                        <td><%=item.producto.marca_id%></td>
                        <td><%=item.producto.precio%></td>
                        <td><img src="/img/<%=item.producto.foto%>" width="30px" height="30px"></td>
                        <td><%=item.cantidad%></td>
                        <td><%=item.subtotal%></td>
                        </form>
                        <td> <form action="/productCart/delete/<%=item.id %>/?_method=DELETE" method="POST" >
                            <button type="submit" class="button_add">Borrar</button>
                        </form>  
                        </td>
                        </tr> 
                     <% }) %>       
     
                        </tbody>
                    </table>
                </div>
                                
                <aside class="asidesole">
                    
                </aside>
                
                   
                
            </section>
       
                <section class="contenedorSole3">


                    <div>
                        <h1 class="micarritoSole">Mi Compra: </h1>
                        <br>

                    </div>
                   

                <a href="/product">
                    <div><button class="seguirComprandoSole"><img src="\img\tablaVector50x62 izq.png"> SEGUIR COMPRANDO</button></div>
                </a>
                
                <div class="todmedpagosole">
                    -Todos los medios de pago
                    <i class="fas fa-credit-card"></i>
                    <i class="far fa-money-bill-alt"></i>
                </div>


                <form action="" method="POST">

                <form method="POST">
                <label for="total">Importe Total<input class="inputsole" type="number" name="importe_total" id="importe_total" value="<%=totalPrice%>"> </label>

                <button  type="submit" class="button_add">CONFIRMAR COMPRA</button>
                </form>

                
                <div>
                    <p class="aSurfear">
                        ...y te vas a surfear...<img src="\img\tablaVector50x62 (1) (1).png">
                    </p>
                </div>





            </section>
            
            <div class="olasSole"><img src="/img/olasSole1000x50.png" width="100%" height="100%"></div>
            <%- include("./partials/footer") %>
