<!DOCTYPE html>
<html>
<%- include("./partials/head") %>

    <body class="bodysole">
        <%- include("./partials/header") %>
            <div> <h1 class="micarritoSole">Mi Carrito: </h1> </div>
           
            <section class="contenedorSole">
                <div class="tabla1Sole">
                    <table class="tablaAdmin">
                        <thead class="thead">
                        <th scope="col">Id</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Marca</th>
                        <th scope="col">Precio</th>
                        <th scope="col">Foto</th>
                        <th scope="col">Cantidad</th>
                        <th scope="col">Subtotal</th>
                        <th scope="col">Eliminar</th>
                        </thead>
                        <tbody>
                        <%items.forEach(item=>{ %>
                        <form  class="tm-edit-product-form" action="" method="POST" >
                        <tr>
                        <td><%=item.id%></td>
                        <td><%=item.producto.nombre%></td>
                        <td><%=item.producto.marca_id%></td>
                        <td><%=item.producto.precio%></td>
                        <td><img src="/img/<%=item.producto.foto%>" width="30px" height="30px"></td>
                        <td><%=item.cantidad%></td>
                        <td><%=item.subtotal%></td>
                        </form>
                        <td> <form action="/productCart/delete/<%=item.id %>/?_method=DELETE" method="POST" >
                            <button type="submit" class="button_add">Borrar</button>
                        </form>  
                        </td>
                        </tr> 
                     <% }) %>       
                         </tbody>
                    </table>
                </div>
                  
            </section>
       
            <section class="contenedorSole3">
                    <div>
                        <h1 class="micarritoSole">Mi Compra: </h1>
                        <br>
                    </div>
                <div class="contenedorSole3">
                    <div class="micarritoSole"> TOTAL A PAGAR </div>
                    <div class="inputsole">
                      <h1 id="total"> $<%= totalPrice %> </p>
                    </div>
                </div>
                  <div><a href="/product"> <button class="button_add"> Seguir Comprando</button> </a></div>
                  
                <form action="productCart/order/add" method="POST">
                <button  type="submit" class="button_add">Confirmar Compra</button>
                <div class="todmedpagosole">Todos los medios de pago<i class="fas fa-credit-card"></i><i class="far fa-money-bill-alt"></i></div>
              
                </form>

                <div>
                    <p class="aSurfear">
                        ...y te vas a surfear...<img src="\img\tablaVector50x62 (1) (1).png">
                    </p>
                </div>





            </section>
            
            <div class="olasSole"><img src="/img/olasSole1000x50.png" width="100%" height="100%"></div>
            <%- include("./partials/footer") %>
    </body>

</html>