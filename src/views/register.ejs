    <form class="form-reg-formulario" action="/client/register" method="POST" enctype="multipart/form-data">
        <section class="form-reg-titulo">
            <h1 class="form-reg-h1"> Vos registrate. 
            Nosotros te conseguimos la tabla.</h1>
        </section>
        
        <section class="form-reg-name"> 
            <p class="form-reg-p">
                <label class="form-reg-label" for=nombre>Nombre.</label>
                <input class="form-reg-input" type="text" name="nombre" value="<%=locals.oldData ? oldData.nombre:null%>"  id="nombre" placeholder=Nombre>
                <% if (locals.errors && errors.nombre) { %>
                   <span class="error"> <%= errors.nombre.msg %> </span>
                  
                <% } %>
            </p>
            
            <p class="form-reg-p">
                <label class="form-reg-label" for=apellido>Apellido.</label>
                <input class="form-reg-input" type="text" name="apellido" value="<%=locals.oldData ? oldData.apellido:null%>"  id="apellido" placeholder=Apellido>
                <% if (locals.errors && errors.apellido) { %>
                    <span class="error">  <%= errors.apellido.msg %> </span>
                 <% } %>
            </p>
        </section>

        <section class="form-reg-mail"> 
            
            <p class="form-reg-p">
                <label class="form-reg-label" for=genero>Genero.</label>
                <input class="form-reg-input" type="text" name="genero" value="<%=locals.oldData ? oldData.genero:null%>"  id="genero" placeholder=Genero>
                <% if (locals.errors && errors.genero) { %>
                    <span class="error">  <%= errors.genero.msg %> </span>
                 <% } %>
            </p>
        </section>


        <section class="form-reg-nacimiento">
            <p class="form-reg-p">
                <label class="form-reg-label" for=fechaNac> Fecha de nacimiento.</label>
                <input class="form-reg-input" type="date" name="fechaNac" id="nacimiento" value=1990-06-30 min="1910-01-01">
            </p>
        </section>
        

        <section class="form-reg-mail">
            <p class="form-reg-p">
                <label class="form-reg-label" for=email >e-mail.</label>
                <input class="form-reg-input" type="email" name="email" value="<%=locals.oldData ? oldData.email:null%>"  id="email" placeholder=mail@dominio.com>
                <% if (locals.errors && errors.email) { %>
                    <span class="error">  <%= errors.email.msg %> </span>
                <% } %>
            </p>
        </section>


        <section class="form-reg-tel">
            <p class="form-reg-p">
               
                    <label class="form-reg-label"><b>Pais de origen:</b></label>
                    <select 
                        name="pais" 
                        class="form-select <%= locals.errors && errors.pais ? 'is-invalid' : null %>">
                        <option value="">Elegí un país</option> <br>
                        <%  let pais = ['Argentina', 'Chile', 'Brasil', 'Uruguay']; %>
                        <% for (const unPais of pais) { %>
                        <option value="<%= unPais %>"
                            <%= locals.oldData && (unPais === oldData.pais) ? 'selected' : null %> 
                            > <%= unPais %> 
                        </option>
                        <% } %>
                    </select>
                        <% if (locals.errors && errors.pais) { %>
                            <span class="error">    <%= errors.pais.msg %></span>
                        <% } %> 
                
            </p>
        </section>


        <section class="form-login-comment-tablas">
            <p class="form-login-p">
                <label class="form-login-label-comment-tablas" for="avatar">Sube tu foto de perfil</label>
                <input class="form-login-input" type="file"  name="avatar" id="avatar" >
            </p>
        </section>



        <section class="form-reg-password">
            <p class="form-reg-p">
                <label class="form-reg-label" for="password">Contraseña.</label>
                <input class="form-reg-input" type="password" name="password" id="password">
                <% if (locals.errors && errors.password) { %>
                    <span class="error">   <%= errors.password.msg %>  </span>           
                <% } %>
            </p>
        </section>

