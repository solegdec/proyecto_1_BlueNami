<!DOCTYPE html>
<%- include("./partials/head") %>


    <body>

        <div id="card">

            <div id="add">
                <div class="add-titulo">
                    <h2 class="add-titulo-2">Add Product</h2>
                </div>
                <div class="add-bloque">
                    <div class="add-formulario">
                        <form action="" class="tm-edit-product-form">
                            <div class="form-group mb-3">
                                <label for="name">
                             Nombre
                        </label>
                                <br/>
                                <input id="name" name="name" type="text" class="campos_add" required />
                            </div>
                            <div class="form-group mb-3">
                                <label for="description">Description</label>
                                <br/>
                                <textarea class="form-control validate" rows="3" required></textarea>
                            </div>
                            <div class="form-group mb-3">
                                <label for="category">Category</label>
                                <br/>
                                <select id="category" class="campos_cat" id="category">
                            <option selected>Select category</option>
                            <option value="1">New Arrival</option>
                            <option value="2">Most Popular</option>
                            <option value="3">Trending</option>
                            </select>
                            </div>
                            <div class="row">
                                <div class="form-group mb-3 col-xs-12 col-sm-6">
                                    <label for="expire_date">
                                     
                                fecha
                            </label>
                                    <br/>
                                    <input id="date" name="expire_date" type="date" class="campos_add" data-large-mode="true" />
                                </div>
                                <div class="form-group mb-3 col-xs-12 col-sm-6">
                                    <label for="stock">
                                Unidades
                            </label>
                                    <br/>
                                    <input id="unidades" name="stock" type="text" class="campos_add" required />
                                </div>
                            </div>

                    </div>
                    <br/>
                    <div class="add-subirImagen">
                        <div class="add-imagen">
                            <img src="img/empty-img.png" alt="surfboard" width="100" height="100" onclick="document.getElementById('fileInput').click();">
                        </div>
                        <div class="add-imgbutton">
                            <input id="fileInput" type="file" style="display:none;" />
                            <input type="button" class="button2" value="Subir Imagen" onclick="document.getElementById('fileInput').click();" />
                        </div>
                    </div>
                    <div class="NewProduct">
                        <a href="/admin"><button class= "selAdmin" type="submit" class="button_add">Nuevo Producto</button></a>
                    </div>
                    </form>
                </div>

            </div>

        </div>

        <div class="olasSole"><img src="/img/olasSole1000x50.png" width="100%" height="100%"></div>
        <%- include("./partials/footer") %>
    </body>

    </html>