<!DOCTYPE html>
<%- include("./partials/head") %>

    <body class="bodyAdminAdd">
        <%- include("./partials/headerAdmin") %>
            <div id="card">
                <div class="add-titulo">
                    <h2>Agregar Producto</h2>
                </div>
                <div class="add-bloque">
                    <div class="add-formulario">
                        <form class="tm-edit-product-form" action="/admin/create" method="POST" enctype="multipart/form-data">
                            
                            <div class="form-group mb-3">
                                <label for="nombre"><p>Tabla</p></label><br/>
                                <input id="nombre" name="nombre" type="text" class="campos_add" required>
                            </div>
                            <div class="form-group mb-3">
                                <label for="marca"><p>Marca</p></label><br/>
                                
                                <select id="marca" class="campos_cat" name="marca" required>
                                <p><%marcas.forEach(marca =>{ %></p>
                                <option value="<%=marca.id%>"><%=marca.marca%></option>  
                                <%})%>
                                </select>
                            </div>
                            <div class="row">
                                <div class="form-group mb-3 col-xs-12 col-sm-6">
                                    <label for="precio"><p>Precio</p></label><br/>
                                    <input id="precio" name="precio" type="text" class="campos_add">
                                </div>
                     
                                <div class="form-group mb-3 col-xs-12 col-sm-6">
                                    <label for="descripcion"><p>Descripci√≥n</p></label><br/>
                                    <textarea class="form-control validate" rows="3" id="descripcion" name="descripcion" type="text" required></textarea>
                                </div>
                                <div class="form-group mb-3 col-xs-12 col-sm-6">
                                    <label for="unidades"><p>Unidades</p></label><br/>
                                    <input id="unidades" name="unidades" type="text" class="campos_add" required />
                                </div> <br>
                                <div class="form-group mb-3 col-xs-12 col-sm-6">
                                    <label for="foto"><p>Agregar Imagen</p></label><br><br>
                                    <input id="foto" type="file" name="foto" value="foto" class="campos_add">
                            </div>
                                
                                <button type="submit" class="button_add">Agregar Producto</button>
                        </form>
                        </div>
                    </div>
                </div>

            </div>
            <div class="olasSole"><img src="/img/olasSole1000x50.png" width="100%" heigth="100%"></div>
            <%- include("./partials/footer") %>
    </body>

    </html>