<!DOCTYPE html>
<%- include("./partials/head") %>

    <body class="bodyAdminAdd">
        <%- include("./partials/headerAdmin") %>
            <div id="card">
                <div class="add-titulo">
                    <h2 class="add-titulo-2">Editar Producto</h2>
                </div>
                <div class="add-bloque">
                    <div class="add-formulario">
                        <form class="tm-edit-product-form" action="/admin/<%= tabla.id %>/edit?_method=PUT" method="POST">

                            <div class="form-group mb-3">
                                <label for="id">Id</label><br/>
                                <input id="id" name="id" type="text" class="campos_add" value="<%= tabla.id%> " required />
                            </div>
                            <div class="form-group mb-3">
                                <label for="tabla">Tabla</label><br/>
                                <input id="tabla" name="tabla" type="text" class="campos_add" value="<%= tabla.name%>" required>
                            </div>
                            <div class="form-group mb-3">
                                <label for="modelo">Modelo</label><br/>
                                <select id="modelo" class="campos_cat" name="modelo" value="<%= tabla.modelo%>" required>
                                        <option selected>Seleccionar</option>
                                        <option value="1">KAILANI</option>
                                        <option value="2">MALIA</option>
                                        <option value="3">MALU </option>
                                        <option value="4">INOA</option>
                                        <option value="5">HINO</option>
                                        <option value="6">MAELI</option>
                                        <option value="7">KOA</option>
                                        <option value="8">LANI</option>
                                        <option value="9"> KALEA</option>
                                        <option value="10">MAKANI</option>
                                        </select>
                            </div>
                            <div class="row">
                                <div class="form-group mb-3 col-xs-12 col-sm-6">
                                    <label for="precio">Precio</label><br/>
                                    <input id="precio" name="precio" type="text" class="campos_add" value="<%= tabla.precio%>">
                                </div>
                                <div class="form-group mb-3 col-xs-12 col-sm-6">
                                    <label for="color">Color</label><br/>
                                    <input id="color" name="color" type="text" class="campos_add" value="<%= tabla.color%>" required>
                                </div>
                                <div class="form-group mb-3 col-xs-12 col-sm-6">
                                    <label for="descripcion">Descripci√≥n</label><br/>
                                    <textarea class="form-control validate" rows="3" id="descripcion" name="descripcion" type="text" required> <%= tabla.descripcion%></textarea>
                                </div>
                                <div class="form-group mb-3 col-xs-12 col-sm-6">
                                    <label for="unidades">Unidades</label><br/>
                                    <input id="unidades" name="unidades" type="number" class="campos_add" value="<%= tabla.unidades%>" required />
                                </div> <br>


                                <button type="submit" class="button_add">Confirmar Cambios</button>
                        </form>
                        </form>
                        </div>
                    </div>
                </div>
                <form action="/product/<%=tabla.id %>/delete?_method=DELETE" method="POST">
                    <button type="submit">
                  Borrar
                </button>
                </form>
                </form>

            </div>
            <div class="olasSole"><img src="/img/olasSole1000x50.png" width="100%" heigth="100%"></div>
            <%- include("./partials/footer") %>
    </body>

    </html>